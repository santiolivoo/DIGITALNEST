generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  nombre        String?
  email         String   @unique
  password      String
  experiencia   String?
  tiposProducto String?
  referencia    String?
  tiendas       Tienda[]
  createdAt     DateTime @default(now())
}

model Tienda {
  id        String     @id @default(cuid())
  nombre    String
  plantilla String?
  tipoNegocio String?
  color       String?
  fuente      String?
  modulos     String[] @default([])
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  productos Producto[]
  pedidos   Pedido[] // ðŸ‘ˆ RelaciÃ³n inversa con Pedido
  createdAt DateTime   @default(now())
}

model Producto {
  id          String       @id @default(cuid())
  nombre      String
  precio      Float
  stock       Int
  imagenUrl   String
  tienda      Tienda       @relation(fields: [tiendaId], references: [id])
  tiendaId    String
  itemsPedido ItemPedido[] // ðŸ‘ˆ RelaciÃ³n inversa con ItemPedido
  createdAt   DateTime     @default(now())
}

model Pedido {
  id        String       @id @default(cuid())
  total     Float
  tienda    Tienda       @relation(fields: [tiendaId], references: [id])
  tiendaId  String
  items     ItemPedido[]
  nombre    String       // nombre del cliente
  email     String       // email del cliente
  createdAt DateTime     @default(now())
}

model ItemPedido {
  id         String   @id @default(cuid())
  producto   Producto @relation(fields: [productoId], references: [id])
  productoId String
  pedido     Pedido   @relation(fields: [pedidoId], references: [id])
  pedidoId   String
  cantidad   Int
  subtotal   Float
}
